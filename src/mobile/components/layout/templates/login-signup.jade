mixin login-signup(template)
  .login-signup
    .login-signup-button-container
      a.avant-garde-box-button.avant-garde-box-button-gray( href="/sign_up?intent=signup&trigger=click&contextModule=#{template}" ) Sign up
    .login-signup-button-container
      a.avant-garde-box-button.avant-garde-box-button-gray( href="/log_in?intent=signup&trigger=click&contextModule=#{template}" ) Log in

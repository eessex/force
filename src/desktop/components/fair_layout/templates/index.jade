//- Override any locals with `append locals`
block locals
  - bodyClass = helpers ? helpers.buildBodyClass(sd) : '';

doctype html
html( data-useragent=userAgent )
  head
    block head
    include ./head.jade

    link( type='text/css', rel='stylesheet', href='#{sd.WEBFONT_URL}/all-webfonts.css')
    link( type='text/css', rel='stylesheet', href=asset('/assets/fairs.css') )

    if assetPackage
      link( type='text/css', rel='stylesheet', href=asset("/assets/#{assetPackage}.css") )

  body( class= bodyClass )
    include ../../modal/template.jade
    include ../../flash/template.jade
    include ./header.jade
    block coverImage
      .fair-layout-cover-image-spacer
    .fair-layout-container
      block nav
        include ./nav.jade
      block body
    include ../../main_layout/footer/template.jade
    #scripts
      include ../../main_layout/templates/scripts.jade
      script( src=asset('/assets/fairs.js') )
      if assetPackage
        script( src=asset("/assets/#{assetPackage}.js") )

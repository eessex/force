extends ../../../components/fair_layout/templates/index

block head
  if sd.SECTION == 'info'
    include ./meta_info.jade
  else if sd.SECTION == 'posts'
    include ./meta_posts.jade
  else if sd.CURRENT_PATH.match(/artworks/)
    include ./meta_artworks.jade
  else if sd.CURRENT_PATH.match(/booths/)
    include ./meta_booths.jade
  else if sd.CURRENT_PATH.match(/artist/)
    include ./meta_artist.jade

block body
  .fair-page-content
    if sd.SECTION == 'search'
      include ./search_results.jade
    else if sd.SECTION == 'browse'
      #fair-browse-spacer
      include ../components/browse/template
    else if sd.SECTION == 'forYou'
      include ./for_you.jade
  .fair-page-footer

  include ../../../components/main_layout/templates/json_ld


extends ../../../components/fair_layout/templates/index

@require '../../../components/stylus_lib'

hero-units-height = 478px

#home-body
  margin auto

#home-foreground
  z-index 1
  width 100%
  background white
  position relative
  margin-top hero-units-height
  padding-bottom 20px

html[data-hide-hero-units]
  #home-foreground
    margin-top 0px
    padding-top 20px
  #home-foreground #main-layout-search-bar-container
    border 2px solid purple-color
    background white
    width 50%
    height 60px
    margin auto
    margin-bottom 110px
  #home-foreground input
    &::placeholder
      color gray-darker-color
      font-size 20px
  #home-foreground h3
    line-height 1
    margin auto
    text-align center
    font-size 42px
    margin-bottom 42px
    margin-top 64px
    width 520px

#home-hero-units
  height hero-units-height
  position fixed
  top 0
  width 100%
  background black
  z-index -1

#home-unsubscribe
  text-align center
  margin-top 200px

html[data-useragent*="iPad"]
  #home-hero-units
    position absolute

#home-artworks-section .filter-fixed-header-nav
  padding-bottom 30px

@require './hero_units'
@require './featured_items'
@require './explore_sections'
@require './modules'
@require './browse'
@require '../components/followed_artists'
@require '../components/new_for_you'
@require '../components/artists_to_follow/stylesheets'

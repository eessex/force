extends ../../../components/main_layout/templates/index.jade
include ../../../components/util/activator.jade

block head
  include ./meta.jade

append locals
  - assetPackage = 'partners'

block body
  - var pluralType = type === 'gallery' ? 'Galleries' : 'Institutions'
  .galleries-institutions-page.main-layout-container
    header.galleries-institutions-header
      h1.galleries-institutions-headline
        | Browse #{pluralType}

      nav.galleries-institutions-subnav
        if showBrowseLink
          a.fine-faux-underline( href=pluralType.toLowerCase() )
            | Browse
        if showAZLink
          a.fine-faux-underline( href="/#{pluralType.toLowerCase()}-a-z" )
            | Aâ€“Z
        a.gallery-partnership-link.fine-faux-underline( data-context='galleries header' href='/#{type}-partnerships' )
          | Partner with Artsy
        if type === 'gallery'
          a.fine-faux-underline( href='/gallery-insights' )
            | Gallery Insights

    block content
    include ./footer.jade
